<div class="md:flex pt-16 w-full h-screen" data-controller="tryit">
  <div data-tryit-target="root" class="h-full w-full">
    <div class="mx-5">
      PreTeXt.Plus (beta) works best in a Chromium-based browser such as Google Chrome or Microsoft Edge.
      If you're seeing this message, please switch to a supported browser.
    </div>
  </div>
  <%= form_with(class: "hidden", html: {"data-tryit-target" => "form"}) do |form| %>
    <%= form.hidden_field :content, "data-tryit-target" => "contentField", value: @content %>
    <%= form.hidden_field :title, "data-tryit-target" => "titleField", value: @title %>
    <%= form.hidden_field :token, "data-tryit-target" => "tokenField", value: ENV["BUILD_TOKEN"] %>
  <% end %>
</div>
