<div id="<%= dom_id project %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= project.user.email_address %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= project.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Content:</strong>
    <form action="https://build.pretext.plus" method="POST" target="pretext">
      <input type="hidden" name="source" value="<%= project.content %>">
      <input type="hidden" name="title" value="<%= project.title %>">
      <input type="hidden" name="token" value="<%= ENV.fetch("BUILD_TOKEN") %>">
      <button type="submit" class="bg-blue-500 text-white px-3 py-1 rounded">Build</button>
    </form>
    <iframe title="Pretext Build" name="pretext" src="https://build.pretext.plus" class="w-full h-96 border border-gray-300"></iframe>
  </div>
</div>
